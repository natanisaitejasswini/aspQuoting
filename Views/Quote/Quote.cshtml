
<html>
<head>
	<title>Quotes</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
     <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine">
</head>
<body>
    <div class="mainbg1"></div>
    <h2 class="heading">Welcome to GoodReads</h2>
    <div class="container">
            <div class="row">
                <div class="col-lg-5 col-lg-offset-3 col-md-3 col-md-offset-4 formBox">
                <div class="form-group col-md-11">
                    <h1>Enter Quote</h1>
                    <form action='/quotes' method="Post">
                    <div class="form-group">
                    <label for="user">Name</label>
                    <input name="user" type="user" class="form-control" id="user" placeholder="User Name">
                    </div>
                    <div class="form-group">
                    <label for="quote">Quote</label>
                    <input name="quote" type="quote" class="form-control" id="quote" placeholder="Quote">
                    </div>
                    <button type="submit" class="btn btn-default">Add Quote</button>
                    <button class="btn btn-default"><a href='/quotes'>Skip to Quotes</a></button>
                </form>
                @{
                        if(ViewBag.errors != null){
                            foreach(var error in ViewBag.errors){
                                <p class="errors">@error</p>
                            }
                        }
                    }
                </div>
                </div>
            </div>
        </div>
</body>
</html>